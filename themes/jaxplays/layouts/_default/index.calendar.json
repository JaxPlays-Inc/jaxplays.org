{{- $events := slice -}}
{{- range where .Site.Pages "Type" "productions" -}}
  {{- $title := .Title -}}
  {{- $theatre := .Params.Theatre -}}
  {{- $url := .Permalink -}}
  {{- range .Params.showtimes -}}
    {{- $events = $events | append (dict "title" $title "start" . "theatre" $theatre "url" $url) -}}
  {{- end -}}
{{- end -}}
{{- $events | jsonify -}}
