{{- $pages := sort (where (where site.RegularPages "Params.active" true) "Section" "theatres") "Title" -}}
[
{{ range $i, $p := $pages }}
{{- $slug := lower (urlize $p.File.TranslationBaseName) -}}
{
"id": {{ jsonify $slug }},
"theatre": {{ jsonify $p.Title }},
"type": {{ jsonify ($p.Params.company_type | default "") }},
"website": {{ jsonify ($p.Params.Socials.Website | default "") }},
"facebook": {{ jsonify ($p.Params.Socials.Facebook | default "") }},
"instagram": {{ jsonify ($p.Params.Socials.Instagram | default "") }},
"twitter": {{ jsonify ($p.Params.Socials.Twitter | default "") }},
"bluesky": {{ jsonify ($p.Params.Socials.Bluesky | default "") }}
}{{ if lt (add $i 1) (len $pages) }},{{ end }}
{{- end }}
]